#version 330 core

layout (location = 0) in vec2 aPos;
layout (location = 1) in vec4 aClip;
layout (location = 2) in vec2 aSize;
layout (location = 3) in vec2 aScale;
layout (location = 4) in float aRotation;


out VS_OUT {
	vec4 clip;
	vec2 size;
	vec2 scale;
	float rotation;
} vs_out;




void main()
{
    gl_Position = vec4(aPos, 0.0, 1.0);
    vs_out.clip = aClip;
    vs_out.size = aSize;
    vs_out.scale = aScale;
    vs_out.rotation = aRotation;

}
